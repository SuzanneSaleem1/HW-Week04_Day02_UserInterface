<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="147dp"
        android:layout_height="82dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".10"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:id="@+id/loogo"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loogo"
        app:layout_constraintBottom_toTopOf="@id/fulllname"
        app:layout_constraintVertical_bias=".13"
        android:layout_marginTop="22dp"
        android:background="@drawable/background_edit_text"
        android:hint="username"
        android:padding="12dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:id="@+id/userr"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/ic_baseline_visibility_24"
        android:hint="Password"
        android:padding="12dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/userr"
        app:layout_constraintVertical_bias="17"
        android:id="@+id/passsword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passsword"
        app:layout_constraintBottom_toTopOf="@+id/eemail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".16"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/ic_baseline_visibility_24"
        android:hint="full name"
        android:padding="12dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:id="@+id/fulllname"/>

    <EditText
        android:id="@+id/eemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/ic_baseline_visibility_24"
        android:hint="Mobile or Email"
        android:padding="12dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/forgot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fulllname"
        app:layout_constraintVertical_bias=".25" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@id/eemail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".70"
        android:layout_marginTop="18dp"
        android:backgroundTint="#3897f0"
        android:padding="12dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="4dp"
        android:id="@+id/loggin"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/eemail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loggin"
        app:layout_constraintVertical_bias=".50"
        android:layout_marginTop="8dp"
        android:text="@string/forgot"
        android:textSize="12sp"
        android:id="@+id/forgot"/>



    <View
app:layout_constraintTop_toBottomOf="@id/loggin"
        app:layout_constraintBottom_toTopOf="@+id/orr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".65"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_weight="1"
        android:background="#e2e2e2"
        android:id="@+id/linne"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/orr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".75"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="OR"
        android:textColor="#9a9a9a"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/orr"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_weight="1"
        android:background="#e2e2e2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".60"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".80"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Log in with Facebook"
        android:textColor="#3897f0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/facebook"/>


    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_marginBottom="8dp"
        android:background="#e2e2e2"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
